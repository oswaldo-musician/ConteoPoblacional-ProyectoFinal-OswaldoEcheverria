<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/imagen5"
    tools:context="proyectofinalmovil.com.conteopoblacional_proyectofinal_oswaldoecheverria.Opciones">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Metodos de captura y recaptura"
                android:id="@+id/textView"
                android:textSize="34dp"
                android:background="#801AA8B7"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="170dp"
            >

            <Button
                android:layout_width="match_parent"
                android:id="@+id/btn_metodo_peterson"
                android:layout_height="60dp"
                android:background="#80000000"
                android:text="Metodo Peterson"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:layout_marginBottom="15dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#80000000"
                android:text="Metodo Schnabel"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:layout_marginBottom="15dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#80000000"
                android:text="Metodo Saber"
                android:textColor="#ffffff"
                android:layout_marginBottom="15dp"
                android:textSize="30dp"
                />




        </LinearLayout>




    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
