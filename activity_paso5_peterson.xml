<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo6"
    android:fitsSystemWindows="true"
    tools:context="proyectofinalmovil.com.conteopoblacional_proyectofinal_oswaldoecheverria.Paso5Peterson">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="15dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Paso5"
                android:textSize="35dp"
                android:textAlignment="center"
                android:gravity="center"
                android:background="#B40431"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="110dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="En este paso se esperará un lapso de 1 a 2 semanas para que la muestras marcadas puedan dispersarse y todos tengan las mismas posibilidades de ser capturados o recapturados, luego volver al área especificada y volver hacer el proceso de captura y recaptura "
                android:id="@+id/textView"
                android:textSize="19dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>




        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Siguiente"
            android:id="@+id/btn_paso5_peterson"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:background="#80B40431"
            />







    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
